
#include<iostream>
using namespace std;
int main()
{
    int n ;
    bool prime = true;
    cout<<"Enter a Number: ";
    cin>>n;
    for( int i=2; i<n; i++)
    {
        if(n%i==0)
        {
            prime = false;
            break;
        }
    }
    if(prime){
        cout<<"\nIt is a Prime Number";}
    else{
        cout<<"\nIt is not a Prime Number";
    cout<<endl;}
    return 0;
}
